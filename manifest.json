{
  "name": "Megane",
  "description": "Убирает размытие с обложек манги на H-Chan и Nude-Moon",
  "version": "0.6.0",
  "permissions": [
    "*://*.h-chan.me/*",
    "*://*.exhentai-dono.me/*",
    "*://*.nude-moon.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.h-chan.me/*"],
      "js": ["chan.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.nude-moon.net/*"],
      "js": ["moon.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "manifest_version": 2
}